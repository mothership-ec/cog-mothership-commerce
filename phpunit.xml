<?xml version="1.0" encoding="UTF-8"?>
<phpunit
	backupGlobals="true"
	backupStaticAttributes="false"
	colors="true"
	convertErrorsToExceptions="true"
	convertNoticesToExceptions="true"
	convertWarningsToExceptions="true"
	stopOnFailure="false"
	bootstrap="vendor/autoload.php"
>
	<testsuites>
		<testsuite name="Mothership Commerce Cogule Test Suite">
			<directory>./tests</directory>
		</testsuite>

		<testsuite name="tax">
			<directory>./tests/Product/Tax</directory>
		</testsuite>
	</testsuites>
	<filter>
		<whitelist>
			<directory>./src</directory>
		</whitelist>
	</filter>
	<php>
		<env name="COG_ENV" value="test" />
	</php>
</phpunit>